{
	"name": "svelte-french-toast",
	"version": "1.2.0",
	"description": "Buttery smooth Svelte toasts. Lightweight, customizable, and beautiful by default.",
	"keywords": [
		"svelte",
		"notifications",
		"toast",
		"snackbar"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/kbrgl/svelte-french-toast.git"
	},
	"license": "MIT",
	"author": "Kabir Goel",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build && pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"package": "svelte-kit sync && svelte-package && publint && cp README.md header-image.png dist/",
		"prepare": "svelte-kit sync",
		"prepublishOnly": "pnpm run package",
		"preview": "vite preview",
		"test": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"svelte-writable-derived": "^3.1.1"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@playwright/test": "^1.50.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/prismjs": "^1.26.5",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.46.1",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"publint": "^0.1.16",
		"svelte": "^5.0.0",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.1.1",
		"vitest": "^3.0.6"
	},
	"packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a"
}
