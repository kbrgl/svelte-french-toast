{
	"name": "svelte-french-toast",
	"version": "2.0.0",
	"description": "Buttery smooth Svelte toasts. Lightweight, customizable, and beautiful by default. Svelte 5 Only",
	"keywords": [
		"svelte",
		"notifications",
		"toast",
		"snackbar"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/kbrgl/svelte-french-toast.git"
	},
	"license": "MIT",
	"author": "Kabir Goel",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"build": "vite build && pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"package": "svelte-kit sync && svelte-package && publint && cp README.md header-image.png dist/",
		"prepare": "svelte-kit sync",
		"prepublishOnly": "pnpm run package",
		"preview": "vite preview",
		"test": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"svelte-writable-derived": "^3.1.1"
	},
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.48.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/package": "^2.3.7",
		"@types/prismjs": "^1.26.5",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"publint": "^0.2.12",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "~5.6.3",
		"vite": "^5.4.10",
		"vitest": "^2.1.3"
	}
}
